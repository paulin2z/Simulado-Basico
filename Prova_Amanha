    <button onclick="verificar(10, 'a')">a) &lt;form&gt;</button>
    <button onclick="verificar(10, 'b')">b) &lt;input&gt;</button>
    <button onclick="verificar(10, 'c')">c) &lt;textbox&gt;</button>
    <p id="resposta10"></p>
